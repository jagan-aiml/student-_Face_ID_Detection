# System Configuration
DATABASE_URL=sqlite:///./attendance.db
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Face Recognition Configuration
FACE_MODEL=VGG-Face
FACE_RECOGNITION_THRESHOLD=0.4

# Siamese Network Configuration
USE_SIAMESE_NETWORK=true
SIAMESE_THRESHOLD=0.85
ENABLE_LIVENESS_DETECTION=true
LIVENESS_THRESHOLD=0.95

# Email Notification Configuration (REQUIRED for parent notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=


# Attendance Configuration
ATTENDANCE_CUTOFF_TIME=08:45

# Scheduler Configuration (for automated absent notifications)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
BACKEND_URL=http://localhost:8000

# Blockchain Configuration (Optional)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NODE_URL=http://localhost:7051
